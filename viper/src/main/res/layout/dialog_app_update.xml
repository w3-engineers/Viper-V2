<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/viper_dialog_app_update_app_title"
        android:textColor="#083480"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_view_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        tools:text="An update version of the Dapp is available from your peers" />


    <TextView
        android:id="@+id/text_view_app_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/viper_dialog_app_name_title"
        android:textAllCaps="true"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_message"
        app:layout_constraintTop_toBottomOf="@+id/text_view_message" />


    <TextView
        android:id="@+id/text_view_update_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/viper_dialog_update_size_title"
        android:textAllCaps="true"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_app_name_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_app_name_title" />

    <TextView
        android:id="@+id/text_view_current_version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/viper_dialog_current_version_title"
        android:textAllCaps="true"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_update_size_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_update_size_title" />

    <TextView
        android:id="@+id/text_view_update_version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/viper_dialog_available_version_title"
        android:textAllCaps="true"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_current_version_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_current_version_title" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <TextView
        android:id="@+id/text_view_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_app_name_title"
        app:layout_constraintStart_toEndOf="@+id/guideLine"
        app:layout_constraintTop_toTopOf="@+id/text_view_app_name_title"
        tools:text="- DAPP" />

    <TextView
        android:id="@+id/text_view_update_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_update_size_title"
        app:layout_constraintStart_toEndOf="@+id/guideLine"
        app:layout_constraintTop_toTopOf="@+id/text_view_update_size_title"
        tools:text="- 23 MB" />

    <TextView
        android:id="@+id/text_view_current_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_current_version_title"
        app:layout_constraintStart_toEndOf="@+id/guideLine"
        app:layout_constraintTop_toTopOf="@+id/text_view_current_version_title"
        tools:text="- 1.0.0" />

    <TextView
        android:id="@+id/text_view_available_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_update_version_title"
        app:layout_constraintStart_toEndOf="@+id/guideLine"
        app:layout_constraintTop_toTopOf="@+id/text_view_update_version_title"
        tools:text="- 2.0.0" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/text_view_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#008DFF"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/viper_dialog_button_update"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_update_version_title" />

    <TextView
        android:id="@+id/text_view_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/viper_dialog_button_not_now"
        android:textAllCaps="false"
        android:textColor="#008DFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_view_update"
        app:layout_constraintStart_toStartOf="@+id/text_view_update"
        app:layout_constraintTop_toBottomOf="@+id/text_view_update" />

    <View
        android:id="@+id/view_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#1A000000"
        app:layout_constraintEnd_toEndOf="@+id/text_view_message"
        app:layout_constraintStart_toStartOf="@+id/text_view_message"
        app:layout_constraintTop_toBottomOf="@+id/text_view_later" />

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_separator"
        app:layout_constraintTop_toBottomOf="@+id/view_separator"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/text_view_service_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/viper_dialog_powered_by"
        android:textColor="#66000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_logo"
        app:layout_constraintEnd_toStartOf="@+id/image_view_logo"
        app:layout_constraintTop_toTopOf="@+id/image_view_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>